<!DOCTYPE html>
<html>
  <head>
    <title>Smacomi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-dark border-bottom">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
         <h1 class="title">Smacomi</h1>
          <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
           <li class="nav-item">
            <%= link_to "TOP", root_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
           <li class="nav-item">
            <%= link_to "新規投稿", new_review_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
           <li class="nav-item">
            <%= link_to "レビュー一覧", reviews_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
           <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
          <% else %>
           <li class="nav-item">
            <%= link_to "TOP", root_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
           <li class="nav-item">
            <%= link_to "レビュー一覧", reviews_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
           <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>
           <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path,class: 'btn btn-outline-secondary mx-3 my-1' %>
           </li>

          <% end %>
          </ul>
          </div>
         </nav>
      </div>
    </header>
    <p class="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>
