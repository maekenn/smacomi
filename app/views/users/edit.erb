<div class="container">
  <h2 class="my-5">プロフィール編集</h2>
  <div class="row">
    <%= form_with model:@user,url:user_path, method: :patch, local: true do |f|%>

    <div class="col-xs-12">

      <div class="form-group row">
       <h4>画像　</h4>
           <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group row">
        <label for="user_name">名前</label>
         　<%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>

      <div class="form-group row">
        <label for="user_age">年齢</label>
         　<%= f.text_field :age, autofocus: true, placeholder: "" %>
      </div>

      <div class="form-group row">
        <label for="gender">性別</label>
         　<%= f.select :gender, User.genders_i18n.keys.to_a, {} %>

      </div>

      <div class="form-group row">
        <label for="use_smartphone">利用機種</label>
         　<div> <%= f.text_field :use_smartphone, autofocus: true, placeholder: "" %></br>
           </div>
      </div>

      <div class="form-group row">
        <label for="comment">コメント</label>
         　<%= f.text_area :comment, autofocus: true, placeholder: "" %>
      </div>
      <div>
        <%= f.submit "編集内容を保存する",class:"btn btn-success mr-5"%>
      </div>
      <% end %>
    </div>
  </div>
</div>